generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id
  apiKey       String
  plan         String @default("FREE")
  totalStorage Int    @default(0)
  usedStorage  Int    @default(0)
  files        File[]
}

model File {
  id     String @id
  name   String
  size   Int
  url    String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
